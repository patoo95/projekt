package projekt;

import java.io.BufferedReader;
import java.io.FileReader;

import javax.swing.*;
import javax.swing.filechooser.FileNameExtensionFilter;

public class EditManager {
	JTextArea textArea;
	
	public EditManager(JTextArea textArea) {

		this.textArea = textArea;
	}
	
	public void selectAll() {

			try {
				textArea.selectAll();
				
			} catch (Exception e) {
				System.out.println(e.getMessage());
			}
		}
	
	public void cut() {

		try {
			textArea.cut();
			
		} catch (Exception e) {
			System.out.println(e.getMessage());
		}
	}
	
	public void copy() {

		try {
			textArea.copy();
			
		} catch (Exception e) {
			System.out.println(e.getMessage());
		}
	}
	
	public void paste() {

		try {
			textArea.paste();
			
		} catch (Exception e) {
			System.out.println(e.getMessage());
		}
	}
	}
