package projekt;

import javax.swing.*;

import javax.swing.filechooser.FileNameExtensionFilter;
import java.io.*;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;

public class FileManager {

	JFileChooser chooser;
	JPanel panel;
	JTextArea textArea;
	String name;
	File storage;

	public FileManager(JTextArea textArea) {

		this.textArea = textArea;

		chooser = new JFileChooser();
		panel = new JPanel();
	}

	public String getName() {
		return storage.getName();
	}

	public void read() {

		int ret = chooser.showDialog(panel, "Otw√≥rz plik");
		if (ret == JFileChooser.APPROVE_OPTION) {
			try {
				storage = chooser.getSelectedFile();
				
				FileInputStream br = new FileInputStream(chooser.getSelectedFile());
				   
				   int b = br.read();
				   
				   while(b != -1) {
					   textArea.append(((char)b) + " ");
					   b = br.read();
				
				   }
				   br.close();
				  }
				  catch (IOException e) {
					  System.out.print(e.toString());
					  //e.printStackTrace();
				  }
		}

				/*BufferedReader br = new BufferedReader(new FileReader(chooser
						.getSelectedFile()));
				String line;
				textArea.setText("");

				while ((line = br.readLine()) != null) {
					textArea.append(line + "\n");
				}

				br.close();
			} catch (Exception e) {
				System.out.println(e.getMessage());
			}
		}*/
	}

	public void save() {

		if (storage == null) {
			this.saveAs();
			return;
		} else {
			_save(storage);
		}
	}

	public void saveAs() {

		int ret = chooser.showDialog(panel, "Zapisz jako");
		if (ret == JFileChooser.APPROVE_OPTION) {
			storage =new File(chooser.getSelectedFile()+".doc");
			_save(chooser.getSelectedFile());
		}
	}

	private void _save(File file) {

		try {
			BufferedWriter bw = new BufferedWriter(new FileWriter(storage));
			bw.write(textArea.getText());
			bw.close();
		} catch (Exception e) {
			System.out.println(e.getMessage());
		}
	}
}
